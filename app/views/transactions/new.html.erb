<div class="row justify-content-center h-100">
  <div class="col-12 col-lg-7 mt-lg-5">
    <div class="card p-3">

      <h2>Create a transaction</h2>

      <%= form_for(@transaction, url: transactions_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: @transaction %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
          </div>
        
        <div class="form-group">
          <%= f.label :amount %>
          <%= f.number_field :amount, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= select("group", "group_id", Group.all.collect { |g| [ g.name, g.id ] }, { include_blank: true }) %>
        </div>

        <%= f.submit 'Submit', class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>