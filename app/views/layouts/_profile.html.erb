<div class="card text-white profile bg-profile">
  <% if user_signed_in? %>
    <div class="card-body text-center">
      <%= image_tag gravatar_image_url('fivanunam@gmail.com', size: 100), height: 100, width: 100, class: 'rounded-circle' %>
      <h2 class="card-title">
        <%= current_user.username %>
      </h2>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item bg-profile">
        <%= link_to 'All transactions', group_transactions_path, class: 'text-white' %>
      </li>
      <li class="list-group-item bg-profile">
        <%= link_to 'External transactions', external_transactions_path, class: 'text-white' %>
      </li>
      <li class="list-group-item bg-profile">
        <%= link_to 'All groups',  groups_path, class: 'text-white' %>
      </li>
    </ul>
  <% else %>
    <div class="card-body text-center">
      <h2 class="card-title wellcome">
        Wellcome!!
      </h2>
    </div>
  <% end %>
</div>