<!DOCTYPE html>
<html>
  <head>
    <title>GroupTransactions</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="fluid-container">
    <%= render 'layouts/navbar' %>
    <div class="row my-3 no-gutters">
		<div class="col-12 col-lg-3 px-3 d-none d-lg-block">
      <%= render 'layouts/profile' %>
    </div>
    <div class="col-12 col-lg-9 px-3">
      <% flash.each do |message_type, message| %>
        <% if message_type == 'alert' %>
          <%= content_tag(:div, message, class: "alert alert-warning") %>
        <% elsif message_type == 'notice'  %>
          <%= content_tag(:div, message, class: "alert alert-success") %>
        <% else %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
      <% end %>
      <%= yield %>
		</div>
	</div>
</div>
  </body>
</html>
