<% @groups.each do |group| %>
  <%= link_to(group) do %>
    <div class="card mb-2 p-3 d-flex flex-row">
      <div class="mr-2 d-flex align-items-center">
        <%= image_tag group.avatar.variant(resize: '100x100!'), class: 'rounded' %>
      </div>
      <div class="w-100">
        <div class="card-body">
          <h5 class="card-title"><%= group.name %></h5>
          <p class="card-text"><small class="text-muted">
            <%= group.created_at.to_s(:rfc822) %>
          </small></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


<%= link_to 'New', new_group_path, class: "btn btn-success btn-lg btn-block" %>